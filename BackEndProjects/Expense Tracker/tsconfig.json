{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["node"],
    "lib": ["es2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
